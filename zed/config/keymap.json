[
	{
		"bindings": {
			"ctrl-q": null
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			"ctrl-ö": "workspace::ToggleBottomDock",
			"ctrl-ä": "terminal_panel::ToggleFocus",
			"ctrl-j": "editor::JoinLines"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"ctrl-alt-down": "editor::DuplicateLineDown",
			"ctrl-alt-up": "editor::DuplicateLineUp",
			"ctrl-'": ["editor::ToggleComments", { "advance_downwards": false }]
		}
	},
	{
		"context": "Terminal",
		"bindings": {
			"ctrl-s": null
		}
	}
]
